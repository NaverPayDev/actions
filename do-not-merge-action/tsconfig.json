{
    "extends": ["../tsconfig.json"],
    "compilerOptions": {
        "target": "ES2015",
        "outDir": "./dist",
        "strict": true,
        "allowJs": true,
        "incremental": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
    "exclude": ["dist"]
}
